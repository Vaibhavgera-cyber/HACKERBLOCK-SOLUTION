1	
2	2	
3	0	3	
4	0	0	4	
5	0	0	0	5

#include<iostream>
using namespace std;
int main() {
	int n;
	cin>>n;
	int count=1;
	for(int i=0;i<n;i++){
		for(int j=0;j<=i;j++){
			if(j==0){
				cout<<count<<"\t";
			}
			else if(j==i){
				cout<<count<<"\t";
			}
			else{
				cout<<0<<"\t";
			}
		}
		count++;
		cout<<"\n";
	}
	return 0;
}
